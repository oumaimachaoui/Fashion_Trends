<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="344dp"
        android:layout_height="544dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true">

        <ImageView
            android:id="@+id/iv_user"
            android:layout_width="85dp"
            android:layout_height="69dp"
            android:layout_centerHorizontal="true" />

        <EditText
            android:id="@+id/et_name"
            android:layout_width="260dp"
            android:layout_height="30dp"
            android:layout_below="@+id/iv_user"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="40dp"
            android:background="#11000000"
            android:ems="10"
            android:inputType="textPersonName"
            android:textColor="#ffffff" />

        <TextView
            android:id="@+id/tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/et_name"
            android:layout_alignStart="@+id/et_name"
            android:layout_marginBottom="-40dp"
            android:text="Username"
            android:textColor="#FFB3B3B3"
            android:textSize="16sp" />


        <EditText
            android:id="@+id/et_reg_email"
            android:layout_width="260dp"
            android:layout_height="30dp"
            android:layout_below="@+id/et_name"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="40dp"
            android:background="#11000000"
            android:ems="10"
            android:inputType="textEmailAddress"
            android:textColor="#ffffff" />

        <TextView
            android:id="@+id/tv_reg_email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/et_name"
            android:layout_alignStart="@+id/et_name"
            android:layout_below="@+id/et_name"
            android:layout_marginLeft="0dp"
            android:layout_marginStart="0dp"
            android:layout_marginTop="22dp"
            android:text="Email"
            android:textColor="#FFB3B3B3"
            android:textSize="16sp" />


        <TextView
            android:id="@+id/et_reg_birth"
            android:layout_width="260dp"
            android:layout_height="30dp"
            android:layout_below="@+id/et_reg_email"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="40dp"
            android:background="#11000000"
            android:ems="10"
            android:textColor="#ffffff" />

        <TextView
            android:id="@+id/tv_reg_birth"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/et_name"
            android:layout_alignStart="@+id/et_name"
            android:layout_below="@+id/et_reg_email"
            android:layout_marginTop="22dp"
            android:text="Birth Date"
            android:textColor="#FFB3B3B3"
            android:textSize="16sp" />

        <EditText
            android:id="@+id/et_reg_password"
            android:layout_width="260dp"
            android:layout_height="30dp"
            android:layout_below="@+id/et_reg_birth"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="40dp"
            android:background="#11000000"
            android:ems="10"
            android:inputType="textPassword"
            android:textColor="#ffffff" />

        <TextView
            android:id="@+id/tv_reg_password"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/et_name"
            android:layout_alignStart="@+id/et_name"
            android:layout_below="@+id/et_reg_birth"
            android:layout_marginTop="22dp"
            android:text="Password"
            android:textColor="#FFB3B3B3"
            android:textSize="16sp" />


        <Button
            android:id="@+id/btn_register"
            android:layout_width="260dp"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="65dp"
            android:background="@drawable/gradient"
            android:bottomLeftRadius="10dp"
            android:bottomRightRadius="10dp"
            android:text="Register"
            android:textColor="#ffffff"
            android:textSize="20sp"
            android:topLeftRadius="10dp"
            android:topRightRadius="10dp" />

        <TextView
            android:id="@+id/tv_no_account"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="22dp"
            android:text="No account yet? Create one"
            android:textColor="#FFB3B3B3"
            android:textSize="16sp" />

        <RadioGroup xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="137dp"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/radio2"
                android:layout_width="69dp"
                android:layout_height="wrap_content"
                android:onClick="onRadioButtonClicked"
                android:textColor="#fff"
                android:text="F" />

            <RadioButton
                android:id="@+id/radio1"
                android:layout_width="77dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="12dp"
                android:onClick="onRadioButtonClicked"
                android:textColor="#fff"
                android:text="H" />

        </RadioGroup>
    </RelativeLayout>

</RelativeLayout>