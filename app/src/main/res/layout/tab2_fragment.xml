<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"></LinearLayout>
    <LinearLayout
        android:id="@+id/layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="15dp"
        android:orientation="vertical">
        <LinearLayout
            android:id="@+id/layout2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
            <RadioButton
                android:id="@+id/rb1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:layout_width="fill_parent"
                android:layout_height="37dp"
                android:paddingTop="15dp"
                android:textStyle="bold"
                android:textSize="18dp"
                android:layout_marginBottom="15dp"
                android:text="Livraison expresse" />
        </LinearLayout>
        <TextView
            android:layout_width="fill_parent"
            android:layout_height="37dp"
            android:paddingTop="15dp"
            android:text="Livré apres 15 jours " />

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="37dp"
            android:layout_alignParentTop="true"
            android:paddingTop="15dp"
            android:text="Frais de livraison:60dh " />

        <LinearLayout
            android:id="@+id/layout3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
            <RadioButton
                android:id="@+id/rb2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:layout_width="fill_parent"
                android:layout_height="37dp"
                android:layout_alignParentTop="true"
                android:paddingTop="15dp"
                android:textStyle="bold"
                android:textSize="18dp"
                android:layout_marginBottom="15dp"
                android:text="Livraison standard" />
        </LinearLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="25dp"
            android:paddingTop="15dp"
            android:text="Livré apres 20 jours" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="25dp"
            android:text="Frais de livraison:30dh" />

        <Button
            android:id="@+id/submit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Valider votre adresse" />
    </LinearLayout>


</LinearLayout>