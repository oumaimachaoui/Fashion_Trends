<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:background="#ffffff"
        android:padding="15dp">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="100dp"
            android:layout_height="86dp"
            android:layout_weight="5" />

        <TextView
            android:id="@+id/tvnameproduct"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="26dp"
            android:layout_marginStart="26dp"
            android:layout_marginTop="12dp"
            android:layout_toEndOf="@id/imageView"
            android:layout_toRightOf="@id/imageView"
            android:textColor="#333"
            android:textSize="14dp" />

        <TextView
            android:id="@+id/tvdesc_product"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="26dp"
            android:layout_marginStart="26dp"
            android:layout_marginTop="35dp"
            android:layout_toEndOf="@id/imageView"
            android:layout_toRightOf="@id/imageView"
            android:textColor="#333"
            android:textSize="12dp" />

        <TextView
            android:id="@+id/tvcolor_product"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="26dp"
            android:layout_marginStart="26dp"
            android:layout_marginTop="50dp"
            android:layout_toEndOf="@id/imageView"
            android:layout_toRightOf="@id/imageView"
            android:text="colorproduct"
            android:textColor="#333"
            android:textSize="12dp" />

        <TextView
            android:id="@+id/tvsize_product"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="26dp"
            android:layout_marginStart="26dp"
            android:layout_marginTop="50dp"
            android:layout_toEndOf="@id/imageView"
            android:layout_toRightOf="@id/tvcolor_product"
            android:text="sizeproduct"
            android:textColor="#333"
            android:textSize="12dp" />

        <TextView
            android:id="@+id/tvprice_product"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="26dp"
            android:layout_marginStart="26dp"
            android:layout_marginTop="62dp"
            android:layout_toEndOf="@id/imageView"
            android:layout_toRightOf="@id/tvcolor_product"
            android:text="PRIX"
            android:drawableRight="@drawable/ic_euro"
            android:textColor="#333"
            android:textSize="12dp" />

        <TextView
            android:id="@+id/tvrating_product"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="26dp"
            android:layout_marginStart="26dp"
            android:layout_marginTop="75dp"
            android:layout_toEndOf="@id/imageView"
            android:layout_toRightOf="@id/tvcolor_product"
            android:drawableRight="@drawable/ic_star_half"
            android:text="Rating"
            android:textColor="#FF4081"
            android:textSize="18dp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="57dp"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_gravity="center"
            android:layout_marginLeft="5sp"
            android:gravity="center"
            android:orientation="vertical">

            <ImageButton
                android:id="@+id/r1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/ic_add_full_card"
                android:gravity="center_vertical|center_horizontal"
                android:text=""
                android:textColor="#FF0000"
                android:textSize="15sp"
                android:textStyle="bold" />

            <ImageButton
                android:id="@+id/r2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/ic_favoris"
                android:gravity="center_vertical|center_horizontal"
                android:text=""
                android:textColor="#ff669900"
                android:textSize="15sp"
                android:textStyle="bold" />
        </LinearLayout>
