<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="333dp"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#FFF"
    android:padding="3dp">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="108dp"
        android:layout_height="86dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="53dp"
        android:src="@mipmap/ic_launcher"
        android:layout_alignParentRight="true" />

    <TextView
        android:id="@+id/tvnameproduct"
        android:layout_width="381dp"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"

        android:layout_below="@+id/imageView" />

    <TextView
        android:id="@+id/tvdesc_product"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/tvnameproduct"
        android:textColor="#333"
        android:textSize="15dp"
        android:textStyle="bold"
        android:layout_alignParentRight="true" />


    <TextView
        android:id="@+id/tvcolor_product"
        android:layout_width="198dp"
        android:text="colorproduct"
        android:textColor="#333"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/tvsize_product"
        android:layout_alignParentLeft="true" />

    <TextView
        android:id="@+id/tvsize_product"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/tvnameproduct"
        android:textAlignment="center"
        android:textStyle="bold"
        tools:ignore="UnknownId"
        android:textSize="12dp"
        android:layout_alignParentLeft="true" />

    <LinearLayout
        android:layout_width="22dp"
        android:layout_height="81dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="57dp"
        android:orientation="vertical"
        android:layout_alignParentLeft="true">

        <ImageButton
            android:id="@+id/r2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/ic_full_favoris"
            android:gravity="center_vertical|center_horizontal"
            android:text=""
            android:textColor="#ff669900"
            android:textSize="15sp"
            android:textStyle="bold" />
    </LinearLayout>

    <ImageButton
        android:id="@+id/r3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_marginEnd="11dp"
        android:layout_marginRight="11dp"
        android:background="@drawable/ic_close"
        android:textStyle="bold" />
    <TextView
        android:id="@+id/tvid_product"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#fff"
        />
</RelativeLayout>
